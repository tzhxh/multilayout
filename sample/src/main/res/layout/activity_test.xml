<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TestActivity">

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click me"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_page"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <com.ixiaow.multilayout.MultiLayout
        android:id="@+id/multi_layout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        app:my_tab_background_no_select="@drawable/style_dsltab_item_bottom_no_selected"
        app:my_tab_background_select="@drawable/style_dsltab_item_bottom"
        app:my_tab_indicator_height="2dp"
        app:my_tab_text_height="19dp"
        app:my_tab_text_width="32dp" />
</LinearLayout>